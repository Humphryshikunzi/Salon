<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Salon.Views.FavoriteStylistsPage"
             Title="Favorite Stylists">
    <ContentPage.Content>
        <ScrollView HorizontalScrollBarVisibility="Never"
                    VerticalScrollBarVisibility="Never">
            <StackLayout Margin="8">
                <TableView HasUnevenRows="True">
                    <TableSection>
                        <ViewCell>
                            <StackLayout >
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Favorite Salonists"
                                           HorizontalOptions="Start"
                                           FontSize="Large"/>
                                </StackLayout>
                                <StackLayout 
                                             Margin="0,0,0,40"
                                             >
                                    <Grid Margin="0,0,5,0">
                                        <StackLayout Orientation="Horizontal">
                                            <Image Source="Salonist3"
                                                    Aspect="AspectFill"
                                                    HeightRequest="100"
                                                   WidthRequest="180"/>
                                            <Label Text="Esther"
                                                   HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                    </Grid>
                                    <Grid>
                                        <StackLayout Orientation="Horizontal">
                                            <Image Source="Salonist4"
                                               Aspect="AspectFill"
                                               HeightRequest="100"
                                                WidthRequest="180"/>
                                            <Label Text="Annet "
                                                    HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>